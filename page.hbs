{{!< default}}
{{!-- 通用页面 --}}
{{#post}}
<header style="background-image: url({{@blog.cover_image}})" class="header-small animated fadeIn">
	<div class="header-top-nav">
		{{navigation}}
	</div>
	<div class="header-middle">
		<div class="header-middle-content animated fadeInUp">
			<h2 class="header-title">{{title}}</h2>
			<h4 class="header-description">{{excerpt}}</h4>
		</div>
	</div>
</header>
<div class="site-content">
	<div class="article-wrapper">
		<div class="article-left">
			<div class="article-content">
				<article class="md-preview">
					{{content}}
				</article>
			</div>
		</div>
	</div>
</div>
{{/post}}

{{!-- 引入评论 --}}
{{> comments}}

{{!-- 引入版权信息 --}}
{{> copyright}}

<div id="show-image-layer" class="hidden"></div>
<div id="show-image-wrapper" class="hidden">
	<img src="" alt="">
</div>
