{{!< default}}
{{!-- 作者页 --}}
<header {{#if feature_image}}style="background-image: url({{feature_image}})"{{/if}} class="header-big animated fadeIn">
    <div class="header-top-nav">
        {{navigation}}
    </div>
    <div class="header-middle">
        <div class="header-middle-content animated fadeInUp">
            <h2 class="header-title">{{tag.name}}</h2>
            <h4 class="header-description">{{tag.description}}</h4>
        </div>
    </div>
    <div class="header-post-num">
        <i class="iconfont icon-statistics"></i><span>共 {{pagination.total}} 篇文章</span>
    </div>

    <a class="indicator">
        <i class="iconfont icon-arrow-down"></i>
    </a>
</header>

<div class="site-content">
    {{> post-card}}

    {{#if pagination}}
    {{pagination}}
    {{/if}}
</div>

{{!-- 引入版权信息 --}}
{{> copyright}}